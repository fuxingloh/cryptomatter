      "prettier --write"
    ]
  },
  "jest": {
    "preset": "@workspace/jest-preset"
  },
  "dependencies": {
    "ajv": "^8.16.0",
    "clipanion": "3.2.1",
    "ethers": "^6.13.5",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@workspace/jest-preset": "workspace:*",
    "@workspace/tsconfig": "workspace:*"
  }
}
